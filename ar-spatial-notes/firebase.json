{
  "hosting": {
    "public": "dist/ar-spatial-notes/browser",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [
      {
        "source": "**",
        "headers": [
          {
            "key": "Permissions-Policy",
            "value": "xr-spatial-tracking=*, camera=*, microphone=*, accelerometer=*, gyroscope=*, magnetometer=*"
          },
          {
            "key": "Feature-Policy",
            "value": "camera *; xr-spatial-tracking *; microphone *; accelerometer *; gyroscope *; magnetometer *"
          }
        ]
      }
    ]
  }
}
