<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- ARCore requires camera permission -->
    <uses-permission android:name="android.permission.CAMERA" />
    
    <!-- ARCore requires this feature -->
    <uses-feature android:name="android.hardware.camera.ar" android:required="true"/>
    
    <!-- Internet for Firebase -->
    <uses-permission android:name="android.permission.INTERNET" />
    
    <!-- Audio recording permission -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="AR Memory Palace"
        android:theme="@style/Theme.AppCompat.Light">
        
        <!-- ARCore metadata -->
        <meta-data
            android:name="com.google.ar.core"
            android:value="required" />
        
        <!-- Cloud Anchors API Key -->
        <meta-data
            android:name="com.google.android.ar.API_KEY"
            android:value="AIzaSyCELbH9SRMT2BeVnUSOXnWfXgcHFm538A0" />
        
        <!-- Splash Screen - Launcher Activity -->
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:theme="@style/SplashTheme"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- Main AR Activity -->
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:screenOrientation="locked"
            android:configChanges="orientation|screenSize" />
            
    </application>

</manifest>
