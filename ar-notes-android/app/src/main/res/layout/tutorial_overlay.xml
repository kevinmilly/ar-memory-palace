<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tutorialOverlay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CC000000"
    android:clickable="true"
    android:focusable="true">

    <!-- Tutorial Content Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:padding="32dp">

        <!-- Step Indicator -->
        <TextView
            android:id="@+id/tutorialStepIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="STEP 1 OF 3"
            android:textColor="#00F2FF"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <!-- Tutorial Icon -->
        <TextView
            android:id="@+id/tutorialIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="ðŸ“±"
            android:textSize="64sp"
            android:layout_marginBottom="24dp"/>

        <!-- Tutorial Title -->
        <TextView
            android:id="@+id/tutorialTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome to AR Memory Palace"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <!-- Tutorial Message -->
        <TextView
            android:id="@+id/tutorialMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Move your phone slowly to scan your environment"
            android:textAlignment="center"
            android:textColor="#CCCCCC"
            android:textSize="18sp"
            android:lineSpacingMultiplier="1.3"
            android:layout_marginBottom="32dp"/>

        <!-- Next Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/tutorialSkipButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SKIP"
                android:textColor="#888888"
                android:textSize="16sp"
                android:textStyle="bold"
                android:padding="12dp"
                android:layout_marginEnd="16dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground"/>

            <TextView
                android:id="@+id/tutorialNextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NEXT"
                android:textColor="#00F2FF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:padding="12dp"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/button_tutorial_next"/>

        </LinearLayout>

    </LinearLayout>

    <!-- Animated Arrow Indicator (positioned dynamically) -->
    <TextView
        android:id="@+id/tutorialArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸ‘‡"
        android:textSize="48sp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        android:visibility="gone"/>

</RelativeLayout>
